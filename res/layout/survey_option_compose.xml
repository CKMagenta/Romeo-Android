<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/gapSmall" >

    <Button
        android:id="@+id/control"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_plus_active"
        android:scaleType="fitCenter"
        android:visibility="visible" />

    <EditText
        android:id="@+id/et_survey_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/gapSmall"
        android:layout_toLeftOf="@id/control"
        android:background="@drawable/romeo_edittext_background"
        android:ems="10"
        android:hint="@string/option_title_placehold"
        android:inputType="text"
        android:textColor="@color/text"
        android:textSize="20sp" >

    </EditText>

</RelativeLayout>