<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/light" 
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    
	<RelativeLayout 
	    android:layout_weight="1"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content" >
	
	    <EditText
	        android:id="@+id/edit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="@dimen/gapSmall"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:hint="이름 검색"
	        android:ems="10" />
	
	    <Button
	        android:id="@+id/clearEdit"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_alignRight="@+id/edit"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="18dp"
	        android:background="@drawable/cross_gray" />
	    
	</RelativeLayout>

	<Button
	    android:id="@+id/submit"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:textColor="@color/gray"
        android:background="@color/lighter"
        android:layout_marginTop="@dimen/gapSmall"
        android:layout_marginBottom="@dimen/gapSmall"
        android:layout_marginRight="@dimen/gapSmall"
        android:minWidth="48dp"
        android:enabled="false"
	    android:text="@string/search" />

</LinearLayout>