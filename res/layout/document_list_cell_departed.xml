<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/document_list_cell_departed"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal" 
    android:background="@drawable/list_cell" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
      	android:layout_gravity="center_vertical"
      	android:padding="@dimen/gap"
      	android:gravity="center_vertical"
      	android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
		        android:textSize="11sp"
            android:textColor="@color/gray"  />
		
    </LinearLayout>

	  <TextView
	      android:id="@+id/arrivalDT"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
		android:gravity="center"
	    android:textSize="8sp"
	      android:textColor="@color/gray"  />
    
    <Button
			    android:id="@+id/goUnchecked"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    android:layout_marginRight="@dimen/gap"
			    android:layout_gravity="center_vertical"
			    android:background="@drawable/bubble_active"
			    android:textColor="@color/white"  />

</LinearLayout>
