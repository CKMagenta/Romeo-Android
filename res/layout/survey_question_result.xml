<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/gap" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/index"
            android:layout_width="20dp"
            android:layout_height="36dp"
            android:layout_marginLeft="0dp"
            android:gravity="center"
            android:text="@string/question_index"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/gap"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/text" />
    </LinearLayout>

    <TextView
        android:id="@+id/isMultiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:text="@string/question_is_multiple"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/switch_chart_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    
	    <kr.go.KNPA.Romeo.Survey.NotScrollableViewPager
	        android:layout_alignParentTop="true"
			android:id="@+id/pager"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			 />
	    <LinearLayout
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:id="@+id/pager_indicator"
	        android:layout_marginTop="235dp"
	        android:layout_width="200dp" 
	        android:layout_height="16dp"
	        android:gravity="center"
	        android:orientation="horizontal"
	        />
    </RelativeLayout>
    <!-- <include layout="@layout/survey_graph_unit" /> -->

</LinearLayout>