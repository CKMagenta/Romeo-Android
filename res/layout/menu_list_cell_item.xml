<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_list_cell_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/cell_icon"
        android:layout_width="@dimen/menu_list_cell_icon_width"
        android:layout_height="@dimen/menu_list_cell_icon_width"
        android:padding="@dimen/menu_list_cell_padding"
        android:layout_marginLeft="@dimen/gap"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/cell_title"
        android:background="@color/transparent"
        android:layout_width="@dimen/menu_list_cell_width"
        android:layout_height="@dimen/menu_list_cell_height"
        android:gravity="center_vertical"
        android:textSize="@dimen/menu_list_cell_fontsize"
        android:padding="@dimen/menu_list_cell_padding"
        android:textColor="@color/lighter"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/cell_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</LinearLayout>