<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_list_cell_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/sub_indicator"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="33dp"
        android:src="@drawable/indentation" />
    
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/menu_list_icon_width"
        android:layout_height="@dimen/menu_list_icon_width"
        android:padding="@dimen/menu_list_cell_padding"
        android:layout_marginLeft="0dp"
        android:src="@drawable/icon" />

    <TextView
        android:id="@+id/title"
        android:background="@color/transparent"
        android:layout_width="@dimen/menu_list_cell_width"
        android:layout_height="@dimen/menu_list_cell_height"
        android:gravity="center_vertical"
        android:textSize="@dimen/menu_list_cell_fontsize"
        android:padding="@dimen/menu_list_cell_padding"
        android:textColor="@color/lighter"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />

</LinearLayout>