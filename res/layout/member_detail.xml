<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/member_detail"
    android:layout_width="match_parent"
    android:layout_height="252dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp" 
        android:gravity="right"
        android:orientation="horizontal"
        android:background="@drawable/member_detail_activity_bar" >
        <Button
            android:id="@+id/close"
            android:layout_gravity="center_vertical"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="5dp"
            android:background="@drawable/cross_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="11dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp"
        android:background="@drawable/member_detail_background"
        android:paddingBottom="0dp" >

        <LinearLayout
            android:id="@+id/info_wrapper"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginLeft="18dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/user_pic"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user_pic_default" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/favorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/star_gray"
                    android:layout_marginRight="11dp" />

                <TextView
                    android:id="@+id/department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:text="Department"
                    android:textColor="@color/text"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text="Rank"
                        android:textColor="@color/text"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/text"
                        android:textSize="17sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <Button
                android:id="@+id/goCommand"
                android:layout_width="84dp"
                android:layout_height="61dp"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/square_gray"
                android:padding="1dp"
                android:text="@string/command"
                android:textSize="16sp" />
            
            <Button
                android:id="@+id/goMeeting"
                android:layout_width="84dp"
                android:layout_height="61dp"
                android:layout_marginBottom="11dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/square_gray"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="0dp"
                android:paddingTop="5dp"
                android:text="@string/meeting"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>