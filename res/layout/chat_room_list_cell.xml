<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_list_cell"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/list_cell"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/userPic"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="11dp"
        android:src="@drawable/user_pic_default" />
		
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
      	android:layout_gravity="center_vertical"
      	android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="Department"
            android:textColor="@color/text"
            android:textSize="12sp" />

				<TextView
				    android:id="@+id/room_list_cell_room_name"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:text="방 제목입니다."
				    android:textColor="@color/text"
				    android:textSize="14sp" />

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:baselineAligned="true" >

					<TextView
					    android:id="@+id/numNewChat"
					    android:layout_width="17dp"
					    android:layout_height="17dp"
					    android:layout_marginRight="3dp"
					    android:layout_marginTop="2dp"
					    android:background="@drawable/bubble_active"
					    android:gravity="center_vertical|center_horizontal"
					    android:src="@drawable/bubble_active"
					    android:text="15"
					    android:textColor="@color/black"
					    android:textSize="12sp" />

					<TextView
					    android:id="@+id/content"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_gravity="bottom"
					    android:orientation="vertical"
					    android:text="Content"
					    android:textColor="@color/text"
					    android:textSize="12dp" />

				</LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/numChatters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(4 명)"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/arrivalDT"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="11dp"
        android:gravity="center_vertical"
        android:text="arrivalDT"
        android:textColor="@color/text"
        android:textSize="10dp" />

</LinearLayout>
