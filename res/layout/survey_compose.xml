<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    android:orientation="vertical" >

    <include layout="@layout/navigation_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/gap" >

            <!-- android:paddingRight="5px" -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/title"
                    android:textColor="@color/text" />

                <EditText
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/romeo_edittext_background"
                    android:ems="10"
                    android:hint="@string/survey_title_placehold"
                    android:inputType="text"
                    android:nextFocusDown="@+id/open_year"
                    android:textColor="@color/text"
                    android:textSize="18sp" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" >

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/receiver"
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/receivers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/romeo_edittext_background"
                    android:ems="10"
                    android:hint="@string/survey_receivers_placehold"
                    android:inputType="text"
                    android:textSize="18sp" >

                    <requestFocus />
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:text="마감시간"
                    android:textColor="@color/text" />

                <EditText
                    android:id="@+id/close_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/romeo_edittext_background"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/survey_close_year_placehold"
                    android:inputType="number"
                    android:maxLength="4"
                    android:nextFocusDown="@+id/close_month"
                    android:padding="@dimen/gapSmaller"
                    android:textColor="@color/text" />

                <EditText
                    android:id="@+id/close_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/romeo_edittext_background"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/survey_close_month_placehold"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/close_day"
                    android:padding="@dimen/gapSmaller"
                    android:textColor="@color/text" />

                <EditText
                    android:id="@+id/close_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/romeo_edittext_background"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="@string/survey_close_day_placehold"
                    android:inputType="number"
                    android:maxLength="2"
                    android:nextFocusDown="@+id/chat_content"
                    android:padding="@dimen/gapSmaller"
                    android:textColor="@color/text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:text="@string/title"
                    android:textColor="@color/text" />

                <CheckBox
                    android:id="@+id/isResultPublic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-4dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:text="결과 공개 여부"
                    android:textColor="@color/text" />
            </LinearLayout>

            <EditText
                android:id="@+id/chat_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/romeo_edittext_background"
                android:ems="10"
                android:inputType="none|textMultiLine"
                android:nextFocusDown="@+id/questions"
                android:textColor="@color/text" />

            <LinearLayout
                android:id="@+id/questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <include layout="@layout/survey_question_compose" />
            </LinearLayout>

            <Button
                android:id="@+id/add_question"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/gap"
                android:background="@color/white"
                android:text="@string/add_question" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>